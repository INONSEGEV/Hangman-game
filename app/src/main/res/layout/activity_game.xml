<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background">

    <!-- Top section with image and UI -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topCard"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<!--            <ImageView-->
<!--                android:id="@+id/topImage"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0dp"-->
<!--                android:adjustViewBounds="true"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:src="@drawable/z"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintBottom_toTopOf="@id/gameInfoBar"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"/>-->
            <com.example.hangmangame.HangmanStepDrawView
                android:id="@+id/hangmanView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/gameInfoBar"/>


            <LinearLayout
                android:id="@+id/gameInfoBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_favorite"
                        app:tint="@color/game_over_red"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/livesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/game_over_red"/>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/victory_gold"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/scoreCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/victory_gold"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Word display area -->
    <androidx.cardview.widget.CardView
        android:id="@+id/wordCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/topCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/lettersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:justifyContent="center"
            app:alignItems="center"/>




    </androidx.cardview.widget.CardView>

    <!-- Letters keyboard -->
    <androidx.cardview.widget.CardView
        android:id="@+id/keyboardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/keyboard_background"
        app:layout_constraintTop_toBottomOf="@id/wordCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/lettersGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="7"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:padding="4dp">

            <!-- שורה 1 -->
            <Button android:id="@+id/btn_ז" android:text="ז" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ו" android:text="ו" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ה" android:text="ה" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ד" android:text="ד" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ג" android:text="ג" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ב" android:text="ב" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_א" android:text="א" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>

            <!-- שורה 2 -->
            <Button android:id="@+id/btn_נ" android:text="נ" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_מ" android:text="מ" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
