            <Button android:id="@+id/btn_ל" android:text="ל" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_כ" android:text="כ" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_י" android:text="י" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ט" android:text="ט" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ח" android:text="ח" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
