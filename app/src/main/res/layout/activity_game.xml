            <Button android:id="@+id/btn_ר" android:text="ר" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ק" android:text="ק" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_צ" android:text="צ" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
