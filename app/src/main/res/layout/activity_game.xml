            <!-- שורה 4 -->
            <Button android:id="@+id/btn_ץ" android:text="ץ" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ף" android:text="ף" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
                android:minWidth="0dp" android:minHeight="0dp" android:padding="4dp" android:textSize="20sp"/>
            <Button android:id="@+id/btn_ן" android:text="ן" style="@style/LetterButton"
                android:layout_width="0dp" android:layout_columnWeight="1"
